@model IEnumerable<WarehouseRDC.Entities.Entities.Order>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetOpenOrders</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsFullfilled)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsFullfilled)
            </td>
            <td>
                @using (Html.BeginForm("FullfillOrder", "Orders", FormMethod.Post, new { id= "fullfillOrder" }))
                {
                    <input hidden value="@item.Id" name="id" />
                    <button type="submit">Fulfill</button>
                }
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
